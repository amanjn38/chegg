#include <stdio.h>
#include <stdlib.h>
#include <math.h>

struct Point {
    int x, y;
};


int getDistance(struct Point p1, struct Point p2)
{
    int x= 0, y= 0;
    // double distance;
    // distance = sqrt((a.x - b.x) * (a.x - b.x) + (a.y-b.y) *(a.y-b.y));
    // return distance;
    int fx1,fx2, fy1,fy2;

     int a;
    
    fx1 = (p1).x - x;
    fx2 = (p2).x - x;
    fy1 = (p1).y - y;
    fy2 = (p2).y - y;
    
    float dist1, dist2;
    dist1 = sqrt((fx1 * fx1) + (fy1 * fy1));
    dist2 = sqrt((fx2 * fx2) + (fy2 * fy2));

    if(dist1 < dist2)
        a = -1;
    else if(dist1 > dist2)
        a = 1;    
    else if(dist1 == dist2)
        {
            if(fx1 < fx2){
                a = -1;
            }else if(fx2 > fx2){
                a = 1;
            }else if(fx1 == fx2){
                if(fy1 > fy2){
                    a = 1;
                }else if(fy1 < fy2){
                    a = -1;
                }else if(fy1 == fy2){
                    a = 0;
                }
            }
        } 
        return a;

}



int main()
{
    struct Point a, b;
    printf("Enter coordinate of point a: ");
    scanf("%d %d", &a.x, &a.y);
    printf("Enter coordinate of point b: ");
    scanf("%d %d", &b.x, &b.y);
    printf("Distance between a and b: %d\n", getDistance(a, b));


    return 0;
}

